<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SiswaAdapter">

    <TextView
        android:id="@+id/T_nama"
        android:layout_width="411dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:text="Textview"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/T_nama"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_edit"
        app:layout_constraintEnd_toEndOf="@+id/T_nama"
        app:layout_constraintStart_toEndOf="@+id/image_edit"
        app:srcCompat="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>